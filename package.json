{
  "name": "shopping-assistant-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for shopping assistant",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/mcp/server.ts",
    "build": "tsc",
    "start": "node dist/mcp/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "mcp:inspect": "npx @modelcontextprotocol/inspector tsx src/mcp/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@auth0/nextjs-auth0": "^3.5.0",
    "zod": "^3.24.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "eslint": "^9.20.1",
    "prettier": "^3.4.2",
    "@modelcontextprotocol/inspector": "^0.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
